{
  "name": "@engagespot/client",
  "version": "0.1.1-alpha.18",
  "source": "./src/index.ts",
  "main": "./dist/engagespot-client.js",
  "module": "./dist/engagespot-client.esm.js",
  "types": "./dist/engagespot-client.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "yarn clean && yarn tsc && npm run build:package && npm run build:umd && npm run build:esm && yarn declarations",
    "build:package": "microbundle --jsx React.createElement",
    "build:umd": "microbundle --jsx React.createElement --external none --format umd --compress --name Engagespot -o dist/cdn/engagespot-client.min.js --no-pkg-main  --define process.env.NODE_ENV=production",
    "build:esm": "microbundle --jsx React.createElement --external none --format esm --compress --name Engagespot -o dist/cdn/engagespot-client.esm.js --no-pkg-main  --define process.env.NODE_ENV=production",
    "dev": "microbundle watch --jsx React.createElement",
    "tsc": "tsc",
    "clean": "rimraf dist",
    "declarations": "api-extractor run --local --verbose",
    "docs": "api-documenter markdown --input-folder spec --output ./spec/markdown",
    "prepare": "yarn run build",
    "test:dev": "jest --watchAll",
    "test": "jest",
    "lint:css": "stylelint './src/**/*.js'"
  },
  "dependencies": {
    "@engagespot/react-component": "^0.1.1-alpha.18",
    "react": "^16.8.3 || ^17.0.0-0",
    "react-dom": "^16.8.3 || ^17.0.0-0"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.13.77",
    "@microsoft/api-extractor": "^7.19.2",
    "@types/jest": "^27.0.3",
    "@types/lodash.mapkeys": "4.6.6",
    "@types/lodash.merge": "^4.6.6",
    "@types/lodash.throttle": "4.1.6",
    "@types/react-transition-group": "4.4.4",
    "@types/styled-components": "5.1.15",
    "axios": "^0.24.0",
    "babel-loader": "^8.2.3",
    "cross-env": "7.0.3",
    "jest": "^27.4.5",
    "microbundle": "0.14.2",
    "msw": "^0.36.3",
    "node-fetch": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "27.1.2",
    "tslib": "2.3.1",
    "typedoc": "^0.22.10",
    "typedoc-plugin-markdown": "^3.11.11",
    "typescript": "4.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslint.rc.js"
    ]
  },
  "gitHead": "71e908c4626564ce4a7054769e3dfba856e4c80b"
}
