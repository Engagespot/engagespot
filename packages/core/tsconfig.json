{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "lib", "__tests", "example"]
}
