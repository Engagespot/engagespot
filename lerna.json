{
  "version": "1.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md", "**/etc/**"],
      "message": "chore(release): 🏷 publish version"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true
    },
    "bootstrap": {}
  },
  "packages": ["packages/*", "examples/*", "docs/", "worker/*", "dashboard/"]
}
