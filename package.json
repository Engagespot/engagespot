{
  "name": "root",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.1.0",
  "scripts": {
    "build": "lerna bootstrap && lerna run build",
    "build:examples": "lerna run build:examples",
    "ci": "yarn install --frozen-lockfile",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "lerna run lint -- --fix",
    "test": "lerna run jest",
    "publish": "lerna publish",
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "eslint": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "2.5.0",
    "pretty-quick": "3.1.2",
    "ts-jest": "27.0.7",
    "tsup": "5.10.0",
    "typedoc": "^0.20.28",
    "typescript": "4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  }
}
